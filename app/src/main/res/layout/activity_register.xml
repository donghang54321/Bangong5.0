<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.rentian.newoa.modules.login.view.RegisterActivity">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/toolbarMenuStyle"
                app:theme="@style/toolBarbalck"
                app:titleTextColor="@color/White" />
        </android.support.design.widget.AppBarLayout>

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:scaleType="fitStart"
            android:src="@drawable/addteam" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:text="@string/tv_forgetpassword"
            android:textColor="@color/task_text2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:text="@string/input_email"
            android:textColor="@color/task_text3"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_et3"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:scaleType="fitEnd"
                android:src="@drawable/yanbi"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/iv_et3"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/task_text3"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/et3"
                android:background="@color/task_text2" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:text="@string/input_email"
            android:textColor="@color/task_text3"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_et4"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:scaleType="fitEnd"
                android:src="@drawable/yanbi"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/iv_et4"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/task_text3"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/et4"
                android:background="@color/task_text2" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:text="@string/input_email"
            android:textColor="@color/task_text3"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_et"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:scaleType="fitEnd"
                android:src="@drawable/yanbi" />

            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/iv_et"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/task_text3"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/et"
                android:background="@color/task_text2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:text="@string/input_email"
                android:textColor="@color/task_text3"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="20dp"
                android:text="忘记密码？"
                android:textColor="@color/task_text2"
                android:textSize="15dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/task_text3"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/et2"
                android:background="@color/task_text2" />

        </RelativeLayout>

        <com.allen.library.SuperTextView
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:elevation="2dp"
            stv:sCenterTextColor="@color/white"
            stv:sCenterTextSize="20dp"
            stv:sCenterTextString="完成注册"
            stv:sShapeCornersRadius="23dp"
            stv:sShapeSelectorNormalColor="@color/bg_task4"
            stv:sShapeSelectorPressedColor="@color/gray"
            stv:sUseShape="true" />


    </LinearLayout>
</ScrollView>
